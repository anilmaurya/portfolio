<!-- Navigation -->
%nav.navbar.navbar-default.navbar-fixed-top
  .container
    <!-- Brand and toggle get grouped for better mobile display -->
    .navbar-header.page-scroll
      = link_to '#', class: 'navbar-toggle btn', data: {toggle: 'collapse', target: "#bs-example-navbar-collapse-1"} do
        %span.sr-only Toggle Navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'Anil Maurya', '#page-top', class: 'navbar-brand'

    <!-- Collect the nav links, forms, and other content for toggling -->
    .collapse.navbar-collapse{:id => "bs-example-navbar-collapse-1"}
      %ul.nav.navbar-nav.navbar-right
        %li.hidden
          = link_to '', '#page-top'
        %li.page-scroll
          = link_to 'Portfolio', '#portfolio'
        %li.page-scroll
          = link_to 'About', '#about'
        %li.page-scroll
          = link_to 'Contact', '#contact'
